{
  "tab_size": 2,
  "hard_tabs": false,
  "formatter": "language_server",
  "format_on_save": "on",
  "code_actions_on_format": {
    "source.fixAll.biome": true
  },
  "lsp": {
    "biome": {
      "settings": {
        "config_path": "biome.json"
      }
    },
    "typescript-language-server": {
      "initialization_options": {
        "preferences": {
          "preferTypeOnlyAutoImports": true
        }
      }
    }
  },
  "languages": {
    "TypeScript": {
      "language_servers": [
        "typescript-language-server",
        "biome"
      ],
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "tab_size": 2
    },
    "TSX": {
      "language_servers": [
        "typescript-language-server",
        "biome"
      ],
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "tab_size": 2
    },
    "JavaScript": {
      "language_servers": [
        "typescript-language-server",
        "biome"
      ],
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "tab_size": 2
    },
    "JSON": {
      "language_servers": [
        "json-language-server",
        "biome"
      ],
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "tab_size": 2
    },
    "JSONC": {
      "language_servers": [
        "json-language-server",
        "biome"
      ],
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "tab_size": 2
    },
    "CSS": {
      "language_servers": [
        "css-language-server",
        "biome"
      ],
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "tab_size": 2
    }
  },
  "file_types": {
    "JSONC": [
      "biome.json",
      ".vscode/*.json"
    ]
  }
}
