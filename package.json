{
  "name": "2md",
  "description": "Converts GitHub repositories, directories, or specific files into a single markdown document for easy consumption by LLMs or documentation tools.",
  "version": "0.0.0",
  "type": "module",
  "repository": "github:o-az/2md",
  "bin": {
    "2md": "./src/cli.mjs"
  },
  "files": [
    "src/cli.mjs"
  ],
  "imports": {
    "#*": "./src/*",
    "#package.json": "./package.json",
    "#wrangler.json": "./wrangler.json",
    "#README.md": "./.github/README.md"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "NODE_ENV='production' wrangler --config='wrangler.json' deploy",
    "types": "wrangler types --env-interface CloudflareBindings",
    "check": "biome check . --write --unsafe",
    "check:types": "bun x oxlint@latest --type-aware --type-check",
    "test": "vitest run",
    "test:e2e": "./scripts/checks.sh",
    "prepublishOnly": "bun run build:cli"
  },
  "dependencies": {
    "hono": "^4.11.9",
    "marked": "^17.0.1",
    "pretty-cache-header": "^1.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@cloudflare/vite-plugin": "^1.24.0",
    "@cloudflare/vitest-pool-workers": "^0.12.11",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/bun": "^1.3.8",
    "@types/node": "^25.2.3",
    "@typescript/native-preview": "^7.0.0-dev.20260210.1",
    "@vitest/coverage-istanbul": "3.2.4",
    "@vitest/ui": "3.2.4",
    "oxlint-tsgolint": "^0.11.5",
    "typed-query-selector": "^2.12.0",
    "typescript": "^5.9.3",
    "vite": "^8.0.0-beta.13",
    "vitest": "3.2.4",
    "wrangler": "^4.64.0"
  },
  "license": "MIT",
  "packageManager": "bun@1.3.9"
}
